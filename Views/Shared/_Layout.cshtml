<!DOCTYPE html>
<html lang="en">
<head>
    <title>Online Lunch Delivery</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700|Oxygen:400,700" rel="stylesheet">

    <link rel="stylesheet" href="/Content/css/animate.css">
    <link rel="stylesheet" href="/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/Content/css/jquery.fancybox.min.css">

    <link rel="stylesheet" href="/Content/fonts/ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="/Content/fonts/fontawesome/css/font-awesome.min.css">

    <!-- Theme Style -->
    <link rel="stylesheet" href="/Content/css/style.css">

</head>
<body>

    <header role="banner">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand " href="/">Online Lunch Delivery</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarsExample05">
                    <ul class="navbar-nav pl-md-5 ml-auto">
                        <li class="nav-item">
                            <a class="btn btn-outline-dark active" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-dark " href="/Customers/Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-dark " href="/LunchPacks/Index">Lunch Packs</a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-outline-dark " href="/DeliveryAgents/Index">Delivery Agents</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-dark " href="/OnlineDeliveries/Index">Online Deliveries</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>



                </div>
            </div>
        </nav>
    </header>
    <!-- END header -->

    <div class="top-shadow"></div>
    <section class="home-slider owl-carousel">
        <div class="slider-item" style="background-image: url('/Content/images/Lunch1.jpg');">
            <div class="container" style="height:30vh">
                <div class="row slider-text align-items-center justify-content-center">
                    <div class="col-lg-7 text-center col-sm-12 element-animate">

                        <h1 class="mb-4"><span>Lunch Delivery Service</span></h1>
                        <p class="mb-5 w-75">Get your lunch delivered!</p>
                    </div>
                </div>
            </div>
        </div>



    </section>

    <div class="container">

        @RenderBody()


    </div>

    <!-- loader -->
    <div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#f4b214" /></svg></div>

    <script src="/Content/js/jquery-3.2.1.min.js"></script>
    <script src="/Content/js/popper.min.js"></script>
    <script src="/Content/js/bootstrap.min.js"></script>
    <script src="/Content/js/owl.carousel.min.js"></script>
    <script src="/Content/js/jquery.waypoints.min.js"></script>
    <script src="/Content/js/jquery.fancybox.min.js"></script>
    <script src="/Content/js/main.js"></script>

    <script src="/Content/js/main.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
